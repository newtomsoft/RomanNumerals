@model string

@{
    ViewData["Title"] = "Roman Numerals";
}

<div class="text-center">
    <h1 class="display-4">Roman Numerals</h1>
    <p>by <a href="https://github.com/newtomsoft/RomanNumerals" target="_blank">Thomas Vuille</a> (with love) with <a href="https://docs.microsoft.com/aspnet/core" target="_blank">ASP.NET Core</a></p>
</div>

<form asp-action="Index">
    <div class="form-group">
        <label class="control-label">nombre à traduire en chiffres romains</label>
        <input name="number" class="form-control" type="number" min="1" max="3999" value="" />
    </div>
    <div class="form-group">
        <label class="control-label">nombre romain à traduire</label>
        <input name="romanNumber" class="form-control" type="text" value="" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" />
    </div>
</form>

<h2>@Model</h2>
